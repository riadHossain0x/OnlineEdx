@{
    ViewData["Title"] = "Home Page";
}
<section class="p-2 bg-light" style="min-height:90vh">
    <div class="container">
        <main role="main" class="pb-3">
            <section class="section-intro padding-top-sm">
                <div class="container">
                    <main class="card p-3">
                        <div class="row">
                            <aside class="col-lg-3">
                                <nav class="nav flex-column nav-pills">
                                    <a class="nav-link active" aria-current="page" href="#">Electronics</a>
                                    <a class="nav-link" href="#">Clothes and wear</a>
                                    <a class="nav-link" href="#">Home interiors</a>
                                    <a class="nav-link" href="#">Computer and tech</a>
                                    <a class="nav-link" href="#">Tools, equipments</a>
                                    <a class="nav-link" href="#">Sports and outdoor</a>
                                    <a class="nav-link" href="#">Animal and pets</a>
                                    <a class="nav-link" href="#">Machinery tools</a>
                                    <a class="nav-link" href="#">Other products</a>
                                </nav>
                            </aside>
                            <div class="col-lg-9">
                                <article class="card-banner p-5 bg-primary" style="height: 360px">
                                    <div style="max-width: 500px">
                                        <h2 class="text-white">Learning that gets you</h2>
                                        <p class="text-white">Skills for your present (and your future). Get started with us.</p>
                                        <a href="#" class="btn btn-warning"> View more </a>
                                    </div>
                                </article>
                            </div>
                        </div>
                    </main>
                </div> <!-- container end.// -->
            </section>
            <!-- ================ SECTION PRODUCTS ================ -->
            <section class="padding-top">
                <div class="container">
                    <div id="category_products">
                        <header class="section-heading">
                            <h3 class="section-title">New products</h3>
                        </header>
                        <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <figure class="card card-product-grid">
                                    <div class="img-wrap">
                                        <img src="alistyle/images/items/4.jpg">
                                    </div>
                                    <figcaption class="info-wrap">
                                        <span class="text-warning">Bestseller</span>
                                        <p class="title">Apple iPhone 13 Pro max 7.1" RAM 6GB 512GB Global</p>

                                        <div class="rating-wrap">
                                            <ul class="rating-stars">
                                                <li class="stars-active" style="width: 90%;">
                                                    <img src="alistyle/images/misc/stars-active.svg" alt="">
                                                </li>
                                                <li>
                                                    <img src="alistyle/images/misc/starts-disable.svg" alt="">
                                                </li>
                                            </ul>
                                            <span class="label-rating text-warning">4.5</span>
                                        </div> <!-- rating-wrap.// -->
                                    </figcaption>

                                    <div class="bottom-wrap float-end">
                                        <a href="#" class="btn btn-primary">Enroll</a>
                                        <a href="#" class="btn btn-light">Details</a>
                                    </div>  <!-- bottom-wrap.// -->

                                </figure> <!-- card // -->
                            </div> <!-- col.// -->
                        </div>
                        <div class="row d-flex justify-content-center text-center">
                            <a asp-controller="Store" asp-action="Products" class="btn btn-light">
                                <i class="fa fa-reorder"></i>  <span class="ms-1 d-none d-sm-inline-block">See More</span>
                            </a>
                        </div>
                    </div>
                </div> <!-- container end.// -->
            </section>
            <!-- ================ SECTION PRODUCTS END.// ================ -->
        </main>
    </div>
</section>
