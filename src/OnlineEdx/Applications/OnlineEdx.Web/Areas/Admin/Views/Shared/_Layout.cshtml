<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>OnlineEdx | @ViewData["PageNav"]</title>

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <link href="~/admintheme/css/bootstrapf9e3.css?v=1.1" rel="stylesheet" type="text/css" />

    <!-- custom style -->
    <link href="~/admintheme/css/uif9e3.css?v=1.1" rel="stylesheet" type="text/css" />
    <link href="~/admintheme/css/responsivef9e3.css?v=1.1" rel="stylesheet" />
    <!-- Toastr css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" type="text/css" rel="stylesheet">
    <!-- iconfont -->
    <link rel="stylesheet" href="~/admintheme/fonts/material-icon/css/round.css" />
    <link rel="stylesheet" href="~/admintheme/Theme.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <b class="screen-overlay"></b>

    <aside class="navbar-aside" id="offcanvas_aside">

        <div class="aside-top">
            <a asp-action="Index" asp-controller="Dashboard" class="brand-wrap">
                <img src="~/admintheme/images/logo.svg" height="46" class="logo" alt="dashboard template">
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize">
                    <i class="text-muted material-icons md-menu_open"></i>
                </button>
            </div>
        </div> <!-- aside-top.// -->

        <nav>
            <partial name="_MenuPartial">     <!-- Menu Partial-->
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                <form class="searchform">
                    <div class="input-group">
                        <input list="search_terms" type="text" class="form-control" placeholder="Search term">
                        <button class="btn btn-light bg" type="button"> <i class="material-icons md-search"></i> </button>
                    </div>
                </form>
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside">
                    <i class="md-28 material-icons md-menu"></i>
                </button>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link btn-icon" onclick="darkmode(this)" title="Dark mode" href="#">
                            <i class="material-icons md-nights_stay"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> English </a>
                    </li>

                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#">
                            <img class="rounded-circle" src="~/admintheme/images/people/avatar1.jpg" width="40" height="40">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">@User.Identity!.Name</a>
                            <hr />
                            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout"
                                  asp-route-returnUrl="@Url.Action("Logout", "Account", new { area = "" })">
                                <button type="submit" class="dropdown-item text-danger">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

        <section class="content-main">

            <div class="content-header">
                <h2 class="content-title">@ViewData["PageNav"]</h2>
            </div>

            <partial name="_ResponsePartial" />

            @RenderBody()
        </section> <!-- content-main end// -->
    </main>


    <script>
        if (localStorage.getItem("darkmode")) {
            var body_el = document.body;
            body_el.className += 'dark';
        }
    </script>

    <script src="~/admintheme/js/jquery-3.5.0.min.js"></script>
    <script src="~/admintheme/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS files-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <!-- Custom JS -->
    <script src="~/admintheme/js/scriptc619.js?v=1.0"></script>
    <!-- Font Awesome cdn-->
    <script src="https://use.fontawesome.com/f96b8d852e.js"></script>
    <!-- Toastr css -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>