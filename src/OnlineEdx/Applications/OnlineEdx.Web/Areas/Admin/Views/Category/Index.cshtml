@{
    ViewData["PageNav"] = "Category List";
}
@section Styles
    {
    <!-- DataTables -->
    <link rel="stylesheet" href="/admintheme/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <div class="float-left">
                                <h3 class="card-title"></h3>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="float-end">
                                <a asp-action="Create" asp-controller="Product" class="btn btn-primary btn-sm text-white">Add New Product<span class="mx-2"><i class="fa fa-plus"></i></span> </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive px-2" style="height: 400px;">
                    <table id="category" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td></td>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.card-body -->
                <partial name="_ModalPartial" />
            </div>
            <!-- /.card -->
        </div>
    </div>

    @section Scripts{
    <!-- DataTables -->
    <script src="~/admintheme/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/admintheme/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
        $(function () {
            $('#category').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/admin/category/getcategories",
                },
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 3,
                        "render": function (data, type, row) {
                            return `<button type="submit" class="btn btn-outline btn-info btn-sm rounded-cirlce" onclick="window.location.href='/admin/category/details/${data}'" value='${data}'>
                                                    <i class="fas fa-eye text-white p-1"></i>
                                                </button>

                                                <button type="submit" class="btn btn-outline btn-warning btn-sm rounded-cirlce" onclick="window.location.href='/admin/category/update/${data}'" value='${data}'>
                                                    <i class="fas fa-edit text-white p-1"></i>
                                                </button>

                                                <button type="submit" class="btn btn-outline btn-danger btn-sm rounded-cirlce show-bs-modal" data-id='${data}' value='${data}'>
                                                    <i class="fas fa-trash p-1"></i>
                                                </button>`;
                        }
                    }
                ]
            });

            $('#category').on('click', '.show-bs-modal', function (event) {
                var id = $(this).data("id");
                var modal = $("#modal-default");
                modal.find('.modal-body p').text('Are you sure you want to delete this record?');
                $("#deleteId").val(id);
                $("#deleteForm").attr("action", "/admin/category/delete");
                modal.modal('show');
            });

            $("#deleteButton").click(function () {
                $("#deleteForm").submit();
            });
        });
    </script>
}
